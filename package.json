{
  "name": "chimimoryo-server",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node --watch -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "build": "cross-env NODE_ENV=production tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write \"**/*.ts\"",
    "check:format": "prettier --check \"**/*.ts\"",
    "check:types": "tsc --pretty --noEmit",
    "check": "pnpm lint && pnpm check:format && pnpm check:types && pnpm build",
    "clean": "tsc --build --clean && rimraf --glob \"dist/\"",
    "prepare": "node ./scripts/prepare.js"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/multer": "^3.0.2",
    "@koa/router": "^12.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "formidable": "^3.5.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^3.2.1",
    "koa-passport": "^6.0.0",
    "koa-session": "^6.4.0",
    "koa2-swagger-ui": "^5.10.0",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/koa": "^2.13.12",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-session": "^6.4.5",
    "@types/koa__cors": "^4.0.3",
    "@types/koa__multer": "^2.0.7",
    "@types/koa__router": "^12.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
